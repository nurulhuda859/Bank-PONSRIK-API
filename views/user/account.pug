extends ../base/main.pug

block content
  -let n = result
  .container.text-center
    h3 Your Accounts
    table.table.table-striped.table-bordered.table-responsive-sm
        tr.header
            th Name
            th ACN
            th Current
            th Total
        tr
            td=n.name
            td=n.acn
            td
                h5=n.current+' Taka'
            td=n.total+' Taka'
    br
    h3 Your Deposits
    table.table.table-striped.table-bordered.table-responsive-sm
      tr.header
        th Date
        th Tag
        th Deposited To
        th Deposited By
        th Amount
        if result.deposits.length != 0
          each n in result.deposits
            tr
              td=n.date.toDateString()
              td "test"
              td=n.dTo
              td=n.dBy
              td
                h5=n.amount+' Taka'
        else
          tr
            td(colspan='5') No deposits yet