extends ../base/main.pug

block css
    include ../res/css/form.css
    include ../res/css/loader.css

block content
    include ../includes/modal.pug
    .container
        form.cform#deposit-form
            .container.register-form
                .note
                    p Create New Deposit
                .form-content
                    .row
                        .col-md-6
                            .form-group
                                select.form-control(name='account', id='account')
                                    each n in accounts
                                        option=`${n.name} - ${n.acn}`
                        .col-md-6
                            .form-group
                                input.form-control(name='date' type='date', placeholder='Deposited Date', value='' id='date')
                    .row
                        .col
                            .form-group
                                input.form-control(name='amount' type='number', placeholder='Deposit Amount', value='' id='amount')
                    .row
                        .col-md-6
                            .form-group
                                input.form-control(name='dBy' type='text', placeholder='Deposited By', value='' id='d-by')
                        .col-md-6
                            .form-group
                                input.form-control(name='dTo' type='text', placeholder='Deposited To', value='' id='d-to')
                            
                    button.btnSubmit(type='submit') Submit
    block js
        script
            include ../res/js/form.js