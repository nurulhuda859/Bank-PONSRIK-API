extends ../base/main.pug

block content
    .container
        table.table.table-striped.table-bordered.table-responsive-sm
            tr.header
                th Name
                th ID
                th Phone
                th Address
                th Join Date
            if customers.length != 0
                each n in customers
                    tr
                        td=n.name
                        td=n.id
                        td=n.phone
                        td=n.address
                        td=n.date.toDateString()
            else
                tr
                    td(colspan='5') No customers yet